.row-mt2 
    h1 = @product.title

.row-mt2
    .col
      table.table.table-border
        thead.thead-dark
          tr
            th Preview
            th Title
            th Description
            th Images
            th Price
            th In Stock
        tbody
            tr
              td
                - if @product.preview_image.attached?
                  = image_tag @product.preview_image, width: '64px'
              td = @product.title
              td = @product.description
              td 
                - @product.images.each do |image|
                  = image_tag image, width: '60px'
              td = @product.price
              td = @product.stock
.row-mt2
    .col-12
      .float-right
        div = link_to admins_products_path
          = button_tag 'Back', class: 'btn btn-primary'